<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PlaylistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgr"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:contentDescription="back"
                android:src="@drawable/baseline_arrow_back_24"
                app:backgroundTint="@color/text"
                app:elevation="6dp"
                app:fabCustomSize="30dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Chill Evening Playlist"
                android:textColor="@color/text"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="387dp"
            android:layout_height="200dp"
            android:src="@drawable/keshi" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:textColor="@color/text"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameAstist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="@color/text"
            android:textSize="14dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/run_time"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/seek_bar"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0:00"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:max="100"
                android:progressTint="@color/white"
                android:progress="0" />
            <TextView
                android:id="@+id/time_end"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/seek_bar"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0:00"
                android:textColor="@color/text"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="6">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:contentDescription="back"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/baseline_replay_24"
                app:backgroundTint="@color/text"
                app:elevation="6dp"
                app:fabCustomSize="40dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:contentDescription="back"
                android:cropToPadding="false"
                android:gravity="bottom|center"
                android:scaleType="center"
                android:src="@drawable/baseline_skip_previous_24"
                app:backgroundTint="@color/text"
                app:elevation="6dp"
                app:fabCustomSize="40dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:contentDescription="back"
                android:cropToPadding="false"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/baseline_play_arrow_24"
                app:backgroundTint="@color/text"
                app:elevation="6dp"
                app:fabCustomSize="50dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:contentDescription="back"
                android:cropToPadding="false"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/baseline_skip_next_24"
                app:backgroundTint="@color/text"
                app:elevation="6dp"
                app:fabCustomSize="40dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/next1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="back"
                android:cropToPadding="false"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/baseline_repeat_24"
                app:backgroundTint="@color/text"
                app:elevation="6dp"
                app:fabCustomSize="40dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>